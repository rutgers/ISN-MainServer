{
  "name": "rutgers-ieee-isn-mainserver",
  "version": "0.0.0",
  "description": "Main server application for the Rutgers IEEE ISN workshop.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "esw --fix -w .",
    "sass": "node-sass scss/style.scss client/css/style.css",
    "serve": "nodemon server/server.js",
    "start": "run-p lint sass serve"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rutgers/ISN-MainServer.git"
  },
  "author": "Rutgers IEEE ISN Team",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rutgers/ISN-MainServer/issues"
  },
  "homepage": "https://github.com/rutgers/ISN-MainServer#readme",
  "eslintConfig": {
      "env": {
          "browser": true,
          "commonjs": true,
          "es6": true,
          "node": true
      },
      "extends": "eslint:recommended",
      "parserOptions": {
          "sourceType": "module"
      },
      "plugins": [
          "angular"
      ],
      "globals": {
          "angular": true
      },
      "rules": {
          "indent": [
              "error",
              4
          ],
          "linebreak-style": [
              "error",
              "unix"
          ],
          "quotes": [
              "error",
              "double"
          ],
          "semi": [
              "error",
              "always"
          ],
          "no-console": [
              "off"
          ]
      }
  },
  "devDependencies": {
    "eslint": "^3.8.1",
    "eslint-plugin-angular": "^1.4.1",
    "eslint-watch": "^2.1.14",
    "node-sass": "^3.11.2",
    "nodemon": "^1.11.0",
    "npm-run-all": "^3.1.1"
  },
  "dependencies": {
    "body-parser": "^1.15.2",
    "express": "^4.14.0",
    "method-override": "^2.3.6",
    "morgan": "^1.7.0"
  }
}

{
  "name": "rutgers-ieee-isn-mainserver",
  "version": "0.0.0",
  "description": "Main server application for the Rutgers IEEE ISN workshop.",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf client/app.bundle.js client/app.bundle.js.map dist/",
    "prebuild:watch": "npm run clean",
    "build:watch": "run-p lint:watch bundle:watch sass:watch",
    "bundle": "rollup -c",
    "bundle:watch": "watch 'npm run bundle' client/js",
    "lint": "esw --fix .",
    "lint:watch": "watch 'npm run lint' client/js server/ tessel/",
    "sass": "node-sass scss/style.scss client/css/style.css",
    "sass:watch": "watch 'npm run sass' scss/",
    "serve": "nodemon server/server.js",
    "host": "lt -s rutgersisn -p 8080",
    "start": "run-p build:watch serve host"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rutgers/ISN-MainServer.git"
  },
  "author": "Rutgers IEEE ISN Team",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rutgers/ISN-MainServer/issues"
  },
  "homepage": "https://github.com/rutgers/ISN-MainServer#readme",
  "eslintConfig": {
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "sourceType": "module"
    },
    "plugins": [
      "angular"
    ],
    "globals": {
      "angular": true
    },
    "rules": {
      "indent": [
        "warn",
        4
      ],
      "linebreak-style": [
        "warn",
        "unix"
      ],
      "quotes": [
        "warn",
        "double"
      ],
      "semi": [
        "warn",
        "always"
      ],
      "no-console": [
        "off"
      ],
      "no-unused-vars": [
        "warn"
      ]
    }
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-preset-es2015-rollup": "^1.2.0",
    "copyfiles": "^1.0.0",
    "eslint": "^3.8.1",
    "eslint-plugin-angular": "^1.4.1",
    "eslint-watch": "^2.1.14",
    "localtunnel": "^1.8.2",
    "node-sass": "^3.11.2",
    "nodemon": "^1.11.0",
    "npm-run-all": "^3.1.1",
    "rimraf": "^2.5.4",
    "rollup": "^0.36.3",
    "rollup-plugin-babel": "^2.6.1",
    "rollup-plugin-commonjs": "^5.0.5",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-watch": "^2.5.0",
    "watch": "^1.0.1"
  },
  "dependencies": {
    "angular": "^1.5.8",
    "angular-messages": "^1.5.8",
    "angular-socket-io": "^0.7.0",
    "angular-ui-bootstrap": "^2.2.0",
    "angular-ui-router": "^0.3.2",
    "angular-websocket": "^2.0.1",
    "angularfire": "^2.1.0",
    "body-parser": "^1.15.2",
    "express": "^4.14.0",
    "firebase": "^3.6.1",
    "method-override": "^2.3.6",
    "morgan": "^1.7.0",
    "socket.io": "^1.7.1",
    "ws": "^1.1.1"
  }
}
